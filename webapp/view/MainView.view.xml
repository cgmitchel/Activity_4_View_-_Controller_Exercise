<mvc:View
    controllerName="exer1gaabucayan.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page id="page" title="{i18n>title}" floatingFooter="true">
        <VBox id="idVBox" class="sapUiSmallMargin">
            <f:SimpleForm
                id="idSimpleForm"
                editable="true"
                layout="ResponsiveGridLayout"
                title="{i18n>detailsTitle}"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">

                <f:content>
                    <!-- First Name -->
                    <Label id="idLblFName" text="{i18n>firstNameLbl}" />
                    <Input id="idInpFName" />

                    <!-- Last Name -->
                    <Label id="idLblLName" text="{i18n>lastNameLbl}" />
                    <Input id="idInpLName" />

                    <!-- Mode of Payment -->
                    <Label id="idLblMOP" text="{i18n>modeOfPaymentLbl}" />
                    <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                        <items>
                            <core:Item id="COD" text="Cash on Delivery" />
                            <core:Item id="CC" text="Credit Card" />
                            <core:Item id="GCASH" text="Gcash" />
                        </items>
                    </Select>

                    <!-- Conditional Fields -->
                    <Label id="idLblPhone" text="{i18n>mobileNumberLbl}" visible="false"/>
                    <Input id="idInputPhone" value="" visible="false"/>

                    <Label id="idLblCC" text="{i18n>creditCardLbl}" visible="false"/>
                    <Input id="idInputCC" value="" visible="false"/>
                </f:content>
            </f:SimpleForm>

            <!-- ðŸ›’ Shopping Cart Table -->
            <Table id="idTableSCart" inset="false">
                <headerToolbar>
                    <OverflowToolbar id="idOFT">
                        <content>
                            <Title id="idTableTitleSCart" text="{i18n>shoppingCartTitle}" />
                            <ToolbarSpacer id="idTSpacer"/>
                            <Button
                                id="idBtnAddItems"
                                icon="sap-icon://cart-4"
                                text="{i18n>addToCartBtn}"
                                tooltip="{i18n>addToCartBtn}"
                                press="onAddItem"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="idCol1"><Text id="idColText1" text="Item" />
                    <Text id="idColText2" text="Quantity" /></Column>
                    <Column id="idCol3"><Text id="idColText3" text="Price" /></Column>
                </columns>

                <items>
                   <ColumnListItem id="idColListItem1" vAlign="Middle">
                        <cells>
                            <Text id="idText1" text="iPhone 14 Pro Max" />
                            <Text id="idText2" text="2" />
                            <Text id="idText3" text="$2000" />
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem id="idColListItem2" vAlign="Middle">
                        <cells>
                            <Text id="idText4" text="Louis Vuitton Speedy" />
                            <Text id="idText5" text="1" />
                            <Text id="idText6" text="$14000" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>

        <!-- âœ… Floating Footer -->
        <footer>
            <Toolbar id="idFooterToolbar">
                <ToolbarSpacer id="idTSpacerFooter" />
                <Button
                    id="idBtnCheckout"
                    text="{i18n>checkoutBtn}"
                    tooltip="{i18n>checkoutBtn}"
                    press="onPressCheckout"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
